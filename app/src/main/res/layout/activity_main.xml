<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edward.calculator.MainActivity">

    <Button
        android:id="@+id/bcoma"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/b3"
        android:layout_alignStart="@+id/b3"
        android:layout_below="@+id/b2"
        android:text="."
        android:textSize="18dp" />

    <Button
        android:id="@+id/bplus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/bminus"
        android:layout_toEndOf="@+id/b1"
        android:layout_toRightOf="@+id/b1"
        android:text="+"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bx"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/b7"
        android:layout_alignTop="@+id/b7"
        android:layout_toEndOf="@+id/b4"
        android:layout_toRightOf="@+id/b4"
        android:text="x"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bminus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/b1"
        android:layout_below="@+id/b4"
        android:layout_toEndOf="@+id/b1"
        android:layout_toRightOf="@+id/b1"
        android:text="-"
        android:textSize="20dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:text="1"
        android:textSize="20dp" />

    <Button
        android:id="@+id/b2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/b4"
        android:layout_toLeftOf="@+id/b1"
        android:layout_toStartOf="@+id/b1"
        android:text="2"
        android:textSize="20dp" />

    <Button
        android:id="@+id/b3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/b2"
        android:layout_toLeftOf="@+id/b2"
        android:layout_toStartOf="@+id/b2"
        android:text="3"
        android:textSize="20dp" />

    <Button
        android:id="@+id/b4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/b1"
        android:layout_toEndOf="@+id/b2"
        android:layout_toRightOf="@+id/b2"
        android:text="4"
        android:textSize="20dp" />

    <Button
        android:id="@+id/b5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/b4"
        android:layout_below="@+id/b7"
        android:layout_toEndOf="@+id/b6"
        android:layout_toRightOf="@+id/b6"
        android:text="5"
        android:textSize="20dp" />

    <Button
        android:id="@+id/b6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/b9"
        android:layout_toLeftOf="@+id/b2"
        android:layout_toStartOf="@+id/b2"
        android:text="6"
        android:textSize="20dp" />

    <Button
        android:id="@+id/b7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/b4"
        android:layout_toEndOf="@+id/b5"
        android:layout_toRightOf="@+id/b5"
        android:text="7"
        android:textSize="20dp" />

    <Button
        android:id="@+id/b8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/b7"
        android:layout_toLeftOf="@+id/b4"
        android:layout_toStartOf="@+id/b4"
        android:text="8"
        android:textSize="20dp" />

    <Button
        android:id="@+id/b9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/b6"
        android:layout_alignStart="@+id/b6"
        android:layout_below="@+id/result"
        android:text="9"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bdivide"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/b4"
        android:layout_below="@+id/bx"
        android:layout_toEndOf="@+id/b1"
        android:layout_toRightOf="@+id/b1"
        android:text="/"
        android:textSize="20dp" />

    <Button
        android:id="@+id/b0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/b2"
        android:layout_toEndOf="@+id/bcoma"
        android:layout_toRightOf="@+id/bcoma"
        android:text="0"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bequal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/bplus"
        android:layout_below="@+id/bminus"
        android:layout_toEndOf="@+id/b0"
        android:layout_toRightOf="@+id/b0"
        android:text="="
        android:textSize="20dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_above="@+id/bx"
        android:layout_alignLeft="@+id/b9"
        android:layout_alignStart="@+id/b9"
        android:layout_marginBottom="84dp"
        android:textSize="60dp"/>

    <Button
        android:id="@+id/bclear"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_above="@+id/b8"
        android:layout_alignLeft="@+id/b9"
        android:layout_alignStart="@+id/b9"
        android:text="Clear" />

</RelativeLayout>
